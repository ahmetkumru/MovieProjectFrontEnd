
@model IEnumerable<MoviesAPI.Models.Movies>

@{
    ViewData["Title"] = "Details";
}

<h1>Kategori Adı</h1>

<div>
    <h4>Bu Kategorideki Filmler</h4>
    <hr />
    <dl class="row">
     
      
               <table class="table table-bordered">

  <tbody>
  
      
        @{
            foreach (var item in Model)
            {
                <tr><th>@item.Name</th>
                
                            
                                @foreach (var m in item.MovieCategorie)
                                {
                                    <th>@m.Category.Name</th>
                                }
                 <th>@item.Description</th>
                            
                <th>@item.Year</th>
               
                </tr>


            }
        }
  
  </tbody>
</table>
    </dl>
</div>
<div>
