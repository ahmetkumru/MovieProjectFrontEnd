@model MoviesAPI.Models.Directors

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Directors</h4>
    <hr />
    <dl class="row">
 
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <table class="table table-bordered">

  <tbody>
  
      
        @{
            foreach (var item in Model.Movies)
            {
                <tr><th>@item.Name</th>
              @foreach (var m in item.MovieCategorie)
                                {
                                    <th>@m.Category.Name</th>
                                }
                                <th>@item.Description</th>
                            
                <th>@item.Year</th>
               
                </tr>

            }
        }
  
  </tbody>
</table>


    </dl>
</div>
